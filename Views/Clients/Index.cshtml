@model IEnumerable<Client>
@{
    ViewData["Title"] = "Index";
}

<h1>Clients</h1>

<div class="container">

    <div class="text-end">

        <a asp-controller="Clients" asp-action="Create" class="btn btn-outline-primary">Add New</a>

    </div>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Nationality</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var client in Model)
            {

                <tr>
                    <td>@client.Id</td>
                    <td>@client.Name</td>
                    <td>@client.Email</td>
                    <td>@client.Password</td>
                    <td>@client.Phone</td>
                    <td>@client.Gender</td>
                    <td>@client.Nationality?.Name_en</td>



                    <td>
                        <a asp-action="Edit" asp-route-Id="@client.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Id="@client.Id" class="btn btn-outline-danger">Delete</a>



                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>