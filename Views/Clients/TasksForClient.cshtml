@model Client
@{
    ViewData["Title"] = "Tasks For Client";
}   

<h2 class="mb-4">📋 مهام العميل: @Model.Name</h2>

@if (Model.MyTasks != null && Model.MyTasks.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>عنوان المهمة</th>
                <th>التصنيف</th>
                <th>تاريخ الإنشاء</th>
                <th>الحالة</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.MyTasks)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Category?.Name</td>
                    <td>@task.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@(task.IsCompleted ? "منتهية ✅" : "قيد التنفيذ ⏳")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        لا توجد مهام مرتبطة بهذا العميل حتى الآن.
    </div>
}